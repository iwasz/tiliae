        </property>

        <!--Teraz property city i city3 mają referencję do tego samego obiektu.-->
        <property name="butter2">
            <ref bean="inner1" />
        </property>
    </bean>



    <list id="listaPrototype" class="BarList">
        <ref bean="bean4"/>
